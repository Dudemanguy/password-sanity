#compdef pws

_pws() {
	local __fields="(password username)"
	_arguments \
		'--copy-master:1' \
		'--field:1:'"$__fields" \
		'--get-profile:1' \
		'--install-completions' \
		'--list-profiles' \
		'--modify-profile:1' \
		'--new-master' \
		'--new-profile:1' \
		'--password-blacklist:1' \
		'--password-length:1' \
		'--password-whitelist:1' \
		'--remove-profile:1'
}

_pws "$@"
